<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/listing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/textDark"
        android:textStyle="bold"
        tools:text="Westmorland Park" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listing_image"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:scaleType="centerCrop"
            tools:src="@drawable/westmorland_park_01_thumbnail" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listing_hours_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/textDark"
                tools:text="Open: 4am - 10pm" />

            <TextView
                android:id="@+id/listing_description_snippet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/textDark"
                tools:text="Medium-sized playground. Baby swings. Restrooms. Drinking fountain." />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>